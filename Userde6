#user defined two matrices

import numpy as np

print("First matrix:")
r1 = int(input("Enter number of rows: "))
c1 = int(input("Enter number of columns: "))
list1 = []

for i in range(r1):
    row = []
    for j in range(c1):
        a = int(input(f"Input the element for [{i+1}, {j+1}]: "))
        row.append(a)
    list1.append(row)

matrix1 = np.array(list1)
print("First matrix:\n", matrix1)

print("Second matrix:")
r2 = int(input("Enter number of rows: "))
c2 = int(input("Enter number of columns: "))
list2 = []

for i in range(r2):
    row = []
    for j in range(c2):
        a = int(input(f"Input the element for [{i+1}, {j+1}]: "))
        row.append(a)
    list2.append(row)

matrix2 = np.array(list2)
print("Second matrix:\n", matrix2)


